<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.patrocine.patrocine">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo_patrocine_adaptive"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_patrocine_adaptive_round"
        android:theme="@style/AppTheme">
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.activities.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.activities.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName=".ui.activities.MainOldActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.patrocine.patrocine.ui.activities.MainOldActivity" />
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.activities.ProductDetailActivity"
            android:label="@string/title_activity_product_detail"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.activities.MovieDetailsActivity"
            android:label="@string/title_activity_movie_details"
            android:parentActivityName=".ui.activities.MainOldActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.patrocine.patrocine.ui.activities.MainOldActivity" />
        </activity>
    </application>

</manifest>